# NotMuch config

set virtual_spoolfile=yes
set folder = "/mnt/internal/mail"

virtual-mailboxes "unread" "notmuch://?query=tag:unread"
virtual-mailboxes "inbox" "notmuch://?query=tag:inbox"
virtual-mailboxes "gmail" 'notmuch://?query=to:"salman104alvi" and tag:inbox'
virtual-mailboxes "disroot" 'notmuch://?query=to:"salmanabedin@disroot.org" and tag:inbox'
virtual-mailboxes "bracu" 'notmuch://?query=to:"salman.abedin2" and tag:inbox'
virtual-mailboxes "dsi" 'notmuch://?query=to:"salman.abedin@dsinnovators.com" and tag:inbox'
virtual-mailboxes "print" 'notmuch://?query=from:"infocare" and to:"salman.abedin" and subject:"assigned group DSi"'
virtual-mailboxes "tickets" 'notmuch://?query=from:"infocare" and to:"salman.abedin" and subject:"assigned you"'

